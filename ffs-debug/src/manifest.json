{
    "manifest_version": 2,
    "name": "FFS Debug",
    "description": "FileFlex Development Extension",
    "version": "4.1.0",
    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://*.cnexusdev.com/*",
        "*://*.komero.net/*",
        "https://share.fileflex.com/*"
    ],
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "*://*.cnexusdev.com/*",
                "*://*.komero.net/*",
                "https://share.fileflex.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "manifest.json"
    ],
    "externally_connectable": {
        "matches": [
            "*://*.cnexusdev.com/*",
            "*://*.komero.net/*",
            "https://share.fileflex.com/*"
        ]
    },
    "options_page": "options.html",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        }
    },
    "icons": {
        "128": "images/icon128.png"
    }
}
